<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="15dp"
    tools:context=".About">

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:gravity="center_horizontal"
           android:orientation="vertical">

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:fontFamily="@font/bungee_inline"
               android:text="About"
               android:textColor="#C63A6A"
               android:textSize="60sp"
               android:textStyle="bold">

           </TextView>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="25sp"
               android:textAlignment="center"
               android:textStyle="bold"
               android:textColor="#9A2828"
               android:text="Welcome to Daffodil International Professional Training Institute (DIPTI)">

           </TextView>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="20sp"
               android:textColor="#0A113C"
               android:textAlignment="center"
               android:layout_marginTop="10dp"
               android:text="@string/about1">

           </TextView>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="25sp"
               android:layout_marginTop="15dp"
               android:textAlignment="center"
               android:textStyle="bold"
               android:textColor="#9A2828"
               android:text="Faculty Members">

           </TextView>

           <ImageView
               android:layout_width="match_parent"
               android:layout_height="200dp"
               android:src="@drawable/teacher12">

           </ImageView>

           <ImageView
               android:layout_width="match_parent"
               android:layout_height="200dp"
               android:src="@drawable/teacher34">

           </ImageView>

           <ImageView
               android:layout_width="match_parent"
               android:layout_height="200dp"
               android:src="@drawable/teacher56">

           </ImageView>

           <ImageView
               android:layout_width="match_parent"
               android:layout_height="200dp"
               android:src="@drawable/teacher78">

           </ImageView>

           <ImageView
               android:layout_width="match_parent"
               android:layout_height="200dp"
               android:src="@drawable/teacher910">

           </ImageView>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="25sp"
               android:textAlignment="center"
               android:textStyle="bold"
               android:textColor="#9A2828"
               android:text="Campus">

           </TextView>

           <ImageView
               android:layout_width="match_parent"
               android:layout_height="280dp"
               android:src="@drawable/campus">

           </ImageView>


           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="35sp"
               android:layout_marginTop="15dp"
               android:textAlignment="center"
               android:textStyle="bold"
               android:textColor="#DA2619"
               android:text="Contact">

           </TextView>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="25sp"
               android:textStyle="bold"
               android:textColor="#9A2828"
               android:text="Address">

           </TextView>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="20sp"
               android:textAlignment="center"
               android:textStyle="bold"
               android:layout_marginTop="10dp"
               android:text="Daffodil Plaza, 4/2, Sobhanbag, Mirpur Road, Dhaka-1207">

           </TextView>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="25sp"
               android:textStyle="bold"
               android:layout_marginTop="20dp"
               android:textColor="#9A2828"
               android:text="Mobile Number">

           </TextView>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="20sp"
               android:textAlignment="center"
               android:textStyle="bold"
               android:layout_marginTop="10dp"
               android:text="01713-493233, 01713-493288, 01713-493267">

           </TextView>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="25sp"
               android:textStyle="bold"
               android:layout_marginTop="20dp"
               android:textColor="#9A2828"
               android:text="Email">

           </TextView>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="20sp"
               android:textAlignment="center"
               android:textStyle="bold"
               android:layout_marginTop="10dp"
               android:text="0info@dipti.com.bd">

           </TextView>

       </LinearLayout>


   </ScrollView>

</LinearLayout>